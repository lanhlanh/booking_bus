<div id="schedule-<%= schedule.id %>" class="list-seat container-fluid">
  <div class="row">
    <div class="col-md-9">
      <div class="seat-padding">
        <label><%= t "how-to-select-seats" %></label>
      </div>
      <div class="seat-padding">
        <%= render "schedules/model_bus", schedule: schedule %>
        <div class="seat-type">
          <ul>
            <li>
              <div class="tpye-seat unbooked"></div>
              <%= t "unbooked-seat"%>
            </li>
            <li>
              <div class="tpye-seat selected"></div>
              <%= t "selected-seat"%>
            </li>
            <li>
              <div class="tpye-seat booked"></div>
              <%= t "booked-seat"%>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-3 bill-detail">
      <div class="detail-wrap">
        <label class="schedule-city"><%= schedule.route.origin.city %>
          <i class="fa fa-arrow-right"></i>
          <%= schedule.route.destination.city %>
        </label>
        <label class="date-schedule">
          <%= schedule.date.strftime(t("date.formats.date_month_year_concise")) %>
        </label>
      </div>
      <div class="detail container-fluid">
        <div class="row">
          <div class="col-md-5">
            <%= t "booked-seat" %>
          </div>
          <div class="col-md-7 wrap-selected-seat">
          </div>
        </div>
        <div class="row">
          <div class="col-md-5">
            <%= t "total-price" %>
          </div>
          <div class="col-md-7">
            <p class="total-price"></p>
          </div>
        </div>
      </div>
      <div class="detail2">
        <button class="btn btn-info continue-btn">
          <%= link_to t("continue"), root_url %>
        </button>
      </div>
    </div>
  </div>
</div>
