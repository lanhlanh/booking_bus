<% provide :title, t("admin.bus.new") %>
<div class="page-wrapper">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">
        <%= t "admin.bus.new" %>
      </h1>
    </div>
  </div>

  <div class="creation-div">
    <div class="row">
      <div class="col-md-11 col-md-offset-1">
        <div class="row name-bus">
          <div class="col-md-3">
            <label><%= t "admin.bus.name"%><label>
          </div>
          <div class="col-md-9 name-field">
            <%= text_field_tag "input-name-bus", nil,
              placeholder:t("admin.bus.enter_input_name"),
              class: "input-name-bus" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
        <div class="row">
          <div class="col-md-6">
            <label><%= t "admin.bus.number_of_seats" %></label>
          </div>
          <div class="col-md-6 right-pos">
            <%= select_tag "bus_seats", options_for_select(@support.seats),
              class: "select-bus" %>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="row">
          <div class="col-md-6">
            <label><%= t "admin.bus.number_of_floors" %></label>
          </div>
          <div class="col-md-6 right-pos">
            <%= select_tag "bus_floors", options_for_select(@support.floors),
              class: "select-bus" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="frame-model-bus-show row">
    <%= render partial: "model_bus", collection: @support.model_buses %>
  </div>

</div>
