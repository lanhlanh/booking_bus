<% provide :title, t("admin.sidebar.statisticRevenueByRoute") %>
<div class="page-wrapper">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">
        <%= t "admin.sidebar.statisticRevenueByRoute" %>
      </h1>
    </div>
  </div>
  <div>
    <div class="errorTxt col-md-12"></div>
  </div>
    <div class="filter-part">
      <div class="row">
        <div class="col-md-3">
          <%= select_tag :route_statistic, options_for_select(list_items(@routes)),
          class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3">
          <%= select_tag t("by"),
            options_for_select(list_type),
            class: "form-control",
            id: "option_statistic" %>
        </div>
        <div class="col-md-2">
          <%= select_tag :select_year,
            options_for_select(@list_of_year),
            class: "form-control",
            id: "year_statistic" %>
        </div>
        <div class="col-md-2">
          <%= button_tag t("show"), {class: "btn btn-primary", id: "show-statistic"} %>
        </div>
      </div>
    </div>
  <div class="row">
    <div id="error_statistic" class="col-md-10 col-md-offset-1"></div>
  </div>
  <div id="show-statistic-chart" class="row">
    <canvas id="myChart"></canvas>
  </div>
</div>

<div class="modal fade" id="statistic_unsuccessfully" tabindex="-1" role="dialog"
  aria-labelledby="myModalLabel" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t "notification" %></h4>
      </div>
      <div class="modal-body">
        <p><%= t "message.statistic.unsuccessfully" %></p>
      </div>
      <div class="modal-footer">
        <%= button_tag t("close"), class: "btn btn-default",
          data: {dismiss: "modal"} %>
      </div>
    </div>
  </div>
</div>
