<div class="container">
  <div class="modal fade" id="login">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- header -->
        <div class="modal-header">
          <button type="button" class="close"
            data-dismiss="modal">&times;</button>
          <h3 class="modal-title"><%= t "login" %></h3>
        </div>
        <!-- body -->
        <div class="modal-header">
          <form role="form">
            <div class="form-group">
              <label><%= t "email" %></label>
              <input type="email" class="form-control"
                placeholder="<%= t "email" %>"/>
              <label class="margin-top-10"><%= t "password" %></label>
              <input class="form-control" type="password"
                placeholder="<%= t "password" %>"/>
              <div class="margin-top-10">
                <input type="checkbox"/> <%= t "remember_me" %>
              </div>
            </div>
          </form>
        </div>
        <!-- footer -->
        <div class="modal-footer">
          <button class="btn btn-primary btn-block"><%= t "login"%></button>
          <div class="margin-top-10">
            <%= link_to t("forget_password"), "#",
              class: "btn btn-default float-left",
              data: {toggle: "modal", target: "#forget_password"},
              id: "forget_modal" %>
            <%= link_to t("signup"), "#",
              class: "btn btn-default",
              data: {toggle: "modal", target: "#signup"},
              id: "signup_modal" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="signup">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- header -->
        <div class="modal-header">
          <button type="button" class="close"
            data-dismiss="modal">&times;</button>
          <h3 class="modal-title"><%= t "signup_title" %></h3>
        </div>
        <!-- body -->
        <div class="modal-header">
          <form role="form">
            <div class="form-group">
              <label><%= t "email" %></label>
              <input type="email" class="form-control"
                placeholder="<%= t "email" %>"/>
              <label class="margin-top-10"><%= t "password" %></label>
              <input type="password" class="form-control"
                placeholder="<%= t "password" %>"/>
              <label class="margin-top-10">
                <%= t "password_confirmation" %></label>
              <input type="password_confirmation" class="form-control"
                placeholder="<%= t "password_confirmation" %>"/>
            </div>
          </form>
        </div>
        <!-- footer -->
        <div class="modal-footer">
          <button class="btn btn-primary btn-block"><%= t "signup" %></button>
          <div class="margin-top-10">
            <label><%= t "account_exist" %></label>
            <%= link_to t("login"), "#",
              class: "btn btn-default",
              data: {toggle: "modal", target: "#login"},
              id: "login_modal" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="forget_password">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- header -->
        <div class="modal-header">
          <button type="button" class="close"
            data-dismiss="modal">&times;</button>
          <h3 class="modal-title"><%= t "forget_password" %></h3>
        </div>
        <!-- body -->
        <div class="modal-header">
          <form role="form">
            <div class="form-group">
              <label><%= t "email" %></label>
              <input type="email" class="form-control"
                placeholder="<%= t "email" %>"/>
            </div>
          </form>
          <button class="btn btn-primary btn-block">
            <%= t "password_retrieval" %></button>
        </div>
        <!-- footer -->
        <div class="modal-footer">
          <div class="margin-top">
            <%= link_to t("login"), "#",
              class: "btn btn-default",
              data: {toggle: "modal", target: "#login"},
              id: "login_modal2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
