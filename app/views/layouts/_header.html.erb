<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), root_url, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home_page"), root_path %></li>
        <li><%= link_to t("payment"), "#" %></li>
        <li><%= link_to t("guide"), "#" %></li>
        <li><%= link_to t("contact"), "#" %></li>
        <% if user_signed_in? %>
          <% if current_user.admin %>
            <li>
              <%= link_to admin_schedules_path, target: "blank" do %>
                <i class="fa fa-dashboard "></i>
                <%= t "manage_pages" %>
              <% end %>
            </li>
          <% end %>
          <li class="dropdown">
            <%= link_to current_user.phone_number, class: "dropdown-toggle",
              data: {toggle:"dropdown"} do %>
              <%= current_user.phone_number %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), new_user_session_url %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), new_user_session_url %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
